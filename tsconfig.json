{
  "compilerOptions": {
    "target": "es6",
    "module": "Node16",
    "moduleResolution": "node16",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "types": ["tailwindcss"]
  },
  "include": [
    "./**/*.ts",
    "tailwindcss"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "node_modules"
  ]
}
